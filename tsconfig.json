{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["dom", "es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2020",
    "types": ["node", "jasmine"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "packages",
    "support"
  ],
  "paths": {
    "jszip": ["node_modules/jszip/dist/jszip.min.js"]
  }
}
